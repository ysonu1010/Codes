#include <iostream>
using namespace std;
struct node{
    int data;
    node* left;
    node* right;
};
node* newnode(int x){
    node* temp=new node;
    temp->data=x;
    temp->left=NULL;
    temp->right=NULL;
    return temp;
}
node* Insert(node* root,int x){
    node* temp=newnode(x);
    if(root==NULL){
        root=temp;
    }
    else if(x<=root->data){
        root->left=Insert(root->left,x);
    }
    else{
        root->right=Insert(root->right,x);
    }
    return root;//always return main root of the whole tree
}
bool search(node* root,int x){
    if(root==NULL) return false;
    else if(root->data==x) return true;
    else if(x<=root->data)  return search(root->left,x);
    else return search(root->right,x);
}
int min(node* root){
	if(root==NULL){
		cout<<"Empty Tree"<<endl;
		return 35;
	}
	else if(root->left==NULL){
		return root->data;
	}
	return min(root->left);
}
int height(node* root){//height of tree
	int leftheight,rightheight;
	if(root==NULL) return -1;//leaf has to be of zero height
	leftheight=height(root->left);
	cout<<"left height:"<<leftheight<<endl;
	rightheight=height(root->right);
	cout<<"right height:"<<rightheight<<endl;
	return max(leftheight,rightheight)+1;
}
int main() {
    node* root=NULL;
    int y;
    root=Insert(root,2);
    root=Insert(root,3);
    root=Insert(root,4);
    root=Insert(root,5);
    root=Insert(root,0);
    root=Insert(root,1);
    root=Insert(root,-1);
    /*cout<<"enter the number to search";
    cin>>y;
    if(search(root,y)==true){
        cout<<"Found";
    }
    else
    cout<<"Not found";*/
    cout<<height(root);
	return 0;
}
