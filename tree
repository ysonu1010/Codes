#include <iostream>
using namespace std;
struct node{
    int data;
    node* left;
    node* right;
};
node* newnode(int x){
    node* temp=new node;
    temp->data=x;
    temp->left=NULL;
    temp->right=NULL;
    return temp;
}
node* Insert(node* root,int x){
    node* temp=newnode(x);
    if(root==NULL){
        root=temp;
    }
    else if(x<=root->data){
        root->left=Insert(root->left,x);
    }
    else{
        root->right=Insert(root->right,x);
    }
    return root;//always return main root of the whole tree
}
bool search(node* root,int x){
    if(root==NULL) return false;
    else if(root->data==x) return true;
    else if(x<=root->data)  return search(root->left,x);
    else return search(root->right,x);
}
int main() {
    node* root=NULL;
    int y;
    root=Insert(root,2);
    root=Insert(root,3);
    root=Insert(root,4);
    root=Insert(root,5);
    cout<<"enter the number to search";
    cin>>y;
    if(search(root,y)==true){
        cout<<"Found";
    }
    else
    cout<<"Not found";
	return 0;
}
